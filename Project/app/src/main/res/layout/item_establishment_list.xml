<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_establishment"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/body_establishment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_two_lines_height"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin">

        <ImageView
            android:id="@+id/establishment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/establishment_icon" />

        <TextView
            android:id="@+id/establishment_nome_fantasia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_text_margin_left"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="@dimen/default_margin"
            android:singleLine="true"
            android:textSize="@dimen/text_regular"
            tools:text="Nome Fantasia" />

        <TextView
            android:id="@+id/establishment_descricao_completa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/establishment_nome_fantasia"
            android:layout_marginLeft="@dimen/list_text_margin_left"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_normal"
            tools:text="Descrição" />

    </RelativeLayout>

</LinearLayout>
